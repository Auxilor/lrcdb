generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Config {
  id        String  @id @default(uuid()) @map("_id")
  name      String
  plugin    String
  author    String  @default("Unknown Author")
  contents  String
  downloads Int     @default(0)
  views     Int     @default(0)
  isPrivate Boolean @default(false)
}

model ApiKey {
  id        String  @id @default(uuid()) @map("_id")
  hash      String
}
