generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Config {
  id        String  @id @default(uuid()) @map("_id")
  name      String
  plugin    String
  author    String  @default("Unknown Author")
  contents  String
  downloads Int     @default(0)
  views     Int     @default(0)
  isPrivate Boolean @default(false)
  category  String?
}

model User {
  id         String @id @default(uuid()) @map("_id")
  username   String
  apiKeyHash String
  level      Int
}
