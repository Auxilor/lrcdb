generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Config {
  id        String  @id @default(uuid())
  name      String
  plugin    String
  author    String  @default("Unknown Author")
  contents  String  @db.Text()
  downloads Int     @default(0)
  views     Int     @default(0)
  isPrivate Boolean @default(false)
  category  String?

  @@index([plugin])
  @@index([name])
  @@index([isPrivate])
}

model User {
  id         String @id @default(uuid())
  username   String
  apiKeyHash String
  level      Int
}
